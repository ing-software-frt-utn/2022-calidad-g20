@page
@using Dominio.Enumeraciones
@model CalzadosSPA.Pages.Público.SemaforoModel
@{
}

@if (Model.OrdenDeProduccion is null)
{
    <h1 class="text-danger justify-content-center text-center">Usted no se encuentra asociado a ninguna OP</h1>
}
else
{
    <div class="row justify-content-center text-center mt-2">
        <h1>OP N°:<b>@Model.OrdenDeProduccion.Numero</b></h1>
    </div>
    <div class="w-100 row" style="height:900px;">
        <div class="w-50 text-center" id="semaforoReproceso">
            <h1 class="font-weight-bold mt-2">REPROCESO</h1>
            <br />
            <br />
            <h1>@Model.OrdenDeProduccion.JornadaActual().TotalIncidencias(TipoDeDefecto.Reproceso)</h1>
        </div>
        <div class="w-50 text-center" id="semaforoObservado">
            <h1 class="font-weight-bold mt-2">OBSERVADO</h1>
            <br />
            <br />
            <h1>@Model.OrdenDeProduccion.JornadaActual().TotalIncidencias(TipoDeDefecto.Observado)</h1>
        </div>
    </div>
}



<script>
    window.onload = function () {
    var jsonVariable2 = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Colores)));
    document.getElementById("semaforoReproceso").style = `background-color:${jsonVariable2.Item1}`;
    document.getElementById("semaforoObservado").style = `background-color:${jsonVariable2.Item2}`;
}
</script>